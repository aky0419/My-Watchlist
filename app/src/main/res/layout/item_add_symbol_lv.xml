<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:padding="10dp">


    <TextView
        android:id="@+id/item_searchlv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My First List"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_searchlv_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_searchlv_title"
        android:layout_marginTop="5dp"
        android:text="My First List"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/item_searchlv_add_item_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/main_addlistbtn_bg"
        android:src="@drawable/ic_baseline_add_24" />


</RelativeLayout>